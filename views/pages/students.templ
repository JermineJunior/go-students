package pages

import (

	"github.com/JermaineJunior/goStudents/internal/models"
	"github.com/JermaineJunior/goStudents/views/layouts"
)

templ Students(students []models.Student) {
	@layouts.App("") {
	<div>
		<h1 class="text-2xl font-bold my-3">Students List</h1>
		<article class="mt-2 px-2 py-1 space-y-3">
		for _,student :=  range(students) {
			<li class="list-none">Name: {student.Name} Email: {student.Email}</li>
		}
		</article>
	</div>
	}
}